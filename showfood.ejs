<style>
    body
    {margin :0;}
    .maincontainer{
       
        width: 100%;
        height: 95%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: Poppins;
    }
    .box{
        width: 60%;
        height: auto;
        background: #fff;
        border-radius: 10px;
        padding: 15px;
        border: 1px solid grey;
    }
    .heading{
        display: flex;
        flex-direction: row;
        align-items: center;
    }
    .headingstyle{
        margin-left: 10px;
        font-size: 18px;
        font-weight: bold;

    }
    .btncenter{
        display:flex;
        justify-content: center;
    }
    .btnsize{
        margin-top: 5px;
        width:80%;
    }
    .addpic{
        width:50px;
        height:50px;
        border-radius: 10px;
    }   
    
</style>

<html>
    <head>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="/javascripts/project.js"></script>
    </head>
    <form action="/food/update_all_food" method="post" >
    <input type="hidden" value="<%=data.foodid %>" name="foodid">
        <div class="maincontainer">
        <div class="box">
            <div class="row">
                <div class="col-12">
                    <div class="heading">
                        <img src="/images/logo.png" width="70">
                        <div class="headingstyle">Update Food Register</div>  
                        <div style="margin-left: auto;">
                            <a href="/food/display_all_food" ><img src="/images/display.png" class="addpic"></a>
                          </div>   
                    </div>
                
                </div>
            </div>


            <div class="row" style="margin-top: 10;">
                <div class="col-xs-12 col-sm-12 col-lg-4" style="margin-bottom: 5px">
                    <select name="categoryid" id="categoryid" class="form-select">
                        <option selected value="<%=data.categoryid %>"><%=data.categoryname %></option>
                      </select>
                </div>

                <div class="col-xs-12 col-sm-12 col-lg-4">
                    <select name="subcategoryid" id="subcategoryid" class="form-select" style="margin-bottom: 5px">
                        <option selected value="<%=data.subcategoryid %>"><%=data.subcategoryname %></option> 
                      </select>
                </div>

                <div class="col-xs-12 col-sm-12 col-lg-4">
                    <input type="text" value="<%=data.foodname %>" name="foodname" class="form-control" id="foodname" placeholder="Food Name">
                </div>
            </div>
            

            <div class="row" style="margin-top: 5px;">
                <div class="col-lg-12">
                    <textarea class="form-control" name="ingredients" rows="2"><%=data.ingredients %></textarea>
                </div>
            </div>


            <div class="row" style="margin-top: 10px;">
                <div class="col-lg-12">
                    <textarea class="form-control" name="description" rows="2"><%=data.description %></textarea>
                </div>
            </div>

            
            <div class="row" style="margin-top: 10px;">
                <div class="col-sm-12 col-xs-12 col-lg-6">
                <input type="text" value="<%=data.price %>" class="form-control" name="price" placeholder="Price">
                </div>

                <div class="col-sm-12 col-xs-12 col-lg-6" style="margin-top: 5px;">
                <input type="text" class="form-control" name="offertype" placeholder="Offer Price" value="<%=data.offertype %>">
                </div>
            </div>


            <div class="row" style="margin-top: 10px;">
                <div class="col-xs-12 col-sm-12 col-lg-3" style="display: flex; justify-content:center; align-items: center;">
                    <div class="form-check form-check-inline">
                        <input <% if(data.foodtype=="Veg") {%> checked <% } %> class="form-check-input" type="radio" name="foodtype" id="foodtype" value="Veg">
                        <label class="form-check-label" for="foodtype">Veg</label>
                      </div>
                      <div class="form-check form-check-inline" >
                        <input<% if(data.foodtype=="NonVeg") {%> checked <% } %> class="form-check-input" type="radio" name="foodtype" id="foodtype" value="NonVeg">
                        <label class="form-check-label" for="foodtype">NonVeg</label>
                      </div>
                </div>

                <div class="col-xs-12 col-sm-12 col-lg-3">
                    <select name="status" id="status" class="form-select" style="margin-top: 5px;">
                        <option selected><%=data.status %></option>
                        <option>Continue</option>
                        <option>Discontinue</option>
                      </select>
                </div>

                
                

            </div>

            <div class="row" style="margin-top: 10px;">
                <div class="col-lg-6 col-sm-12 col-xs-12 btncenter" >
                    <button type="submit"name="btn" value="Edit" class="btn btn-primary btnsize">Edit</button>
                </div>

                <div class="col-lg-6 col-sm-12 col-xs-12 btncenter" >
                    <button type="submit"name="btn" value="Delete" class="btn btn-primary btnsize">Delete</button>
                </div>
            </div>

            
            <div class="row" style="margin-top: 10px;">
                <div class="col-lg-12 col-sm-12 col-xs-12 btncenter">
                   
                </div>
            </div>
           

            
        </div>
    </div>
    </form>
</html>